#import "RootVC.h"
#import "UIViewController+LayoutGuide.h"

@interface RootVC ()

@end

@implementation RootVC

- (void)viewDidLoad {
    [super viewDidLoad];
    self.view.backgroundColor = [UIColor whiteColor];
    self.navigationController.navigationBarHidden = YES;
    
    UIView *navigation = [[UIView alloc] init];
    navigation.backgroundColor = [UIColor redColor];
    [self.view addSubview:navigation];
    [navigation mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.mas_equalTo(0);
        make.left.right.mas_equalTo(0);
        make.bottom.mas_equalTo(self.lqc_topLayoutGuide).offset(44);
    }];
    
}


@end
